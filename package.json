{
	"name": "next-with-teplscch",
	"version": "1.0.0",
	"description": "Next.js example with typescript, eslint, prettier, lint-staged, commitlint, commitizen, husky, jest and testing-library",
	"main": "index.js",
	"author": "Thiago Nascimento <thiag.g3@gmail.com>",
	"license": "MIT",
	"scripts": {
		"dev": "next",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"type-check": "tsc",
		"commit": "git-cz",
		"lint-staged": "lint-staged",
		"prepare": "husky install",
		"test": "jest --watch",
    	"test:ci": "jest --ci",
		"test:staged": "yarn test --bail --findRelatedTests --watch=false"
	},
	"dependencies": {
		"next": "latest",
		"react": "^17.0.2",
		"react-dom": "^17.0.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^16.2.3",
		"@commitlint/config-conventional": "^16.2.1",
		"@testing-library/jest-dom": "^5.16.2",
		"@testing-library/react": "^12.1.4",
		"@types/node": "^17.0.21",
		"@types/react": "^17.0.41",
		"@types/react-dom": "^17.0.14",
		"@typescript-eslint/eslint-plugin": "^5.15.0",
		"@typescript-eslint/parser": "^5.10.2",
		"commitizen": "^4.2.4",
		"cz-conventional-changelog": "3.3.0",
		"eslint": "^7.32.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-airbnb-typescript": "^16.1.0",
		"eslint-config-next": "12.0.10",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-react": "^7.28.0",
		"eslint-plugin-react-hooks": "^4.3.0",
		"husky": "^7.0.4",
		"jest": "^27.5.1",
		"lint-staged": "^12.3.7",
		"prettier": "^2.6.0",
		"typescript": "4.0"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
